{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "16.14.0"
  },
  "scripts": {
    "dev": "vite --open",
    "lint": "eslint . --ext ts --fix",
    "prebuild": "tsc --noEmit",
    "build": "npm run prebuild && vite build --emptyOutDir",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "npm run build && npm run server",
    "stylelint": "npx stylelint --fix ./src/**/*.scss",
    "test": "./node_modules/.bin/mocha --require ts-node/register --require src/mochaSetup.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint && npm run test"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.3.8",
    "@types/handlebars": "^4.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.6.0",
    "@types/sinon": "^10.0.19",
    "@types/sinon-chai": "^3.2.10",
    "@types/uuid": "^9.0.3",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "@typescript-eslint/parser": "6.6.0",
    "chai": "^4.3.10",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "pre-commit": "^1.2.2",
    "sass": "1.66.1",
    "scss": "0.2.4",
    "sinon": "^16.1.0",
    "sinon-chai": "^3.7.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.2.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.2",
    "vite": "4.4.5"
  },
  "dependencies": {
    "express": "4.18.2",
    "handlebars": "4.7.8",
    "uuid": "^9.0.0",
    "vite-plugin-handlebars": "1.6.0"
  }
}
